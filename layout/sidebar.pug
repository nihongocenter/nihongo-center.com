a.box.apply-now(href='https://my.nihongo-center.com/', target='_blank')
	span.glyphicon.glyphicon-thumbs-up
	span= __(apply)

.box
	p.center
		span October 2017 visa application is now
		strong  over
		span . October 2017 short term courses application will end on
		strong  August 25th
		span . April 2017 student visa application 
		strong started

.box.flags
	each language in languages
		if true
			a(href=`javascript:window.changeLanguage('${language.code}');`, title=language.name).flag
				img.flag-image(src=`/images/flags/${language.flag ? language.flag : language.code}.png`, alt=language.name)
		else
			a(href='/' + (language.code ? language.code + '/' : ''), title=language.name).flag
				img.flag-image(src=`/images/flags/${language.flag ? language.flag : language.code}.png`, alt=language.name)

.box.sidebar-social-media
	a(href='https://www.facebook.com/NihongoCenterKyoto', target='_blank', title='Facebook', class='sidebar-social-media-link facebook')
		img(class='sidebar-social-media-icon', src='/images/social-media/facebook.png', alt='Facebook')

	a(href='https://plus.google.com/+NihongoCenterJapaneseLanguageSchool%E4%BA%AC%E9%83%BD%E5%B8%82/about', target='_blank', title='Google+', class='sidebar-social-media-link googleplus')
		img(class='sidebar-social-media-icon', src='/images/social-media/googleplus.png', alt='Google+')

	a(href='https://twitter.com/NihongoCenterJP', target='_blank', title='Twitter', class='sidebar-social-media-link twitter', rel='publisher')
		img(class='sidebar-social-media-icon', src='/images/social-media/twitter.png', alt='Twitter')

	//-a(href='/contact', class='sidebar-social-media-link mail-button')
		img(class='sidebar-social-media-icon', src='/images/social-media/email.png', alt='E-Mail', width='32', height='32')

